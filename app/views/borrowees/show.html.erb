<table class = "table">
  <tr>
  	<th> Image: </th>
	  <th> Name: </th>
		<th> Size: </th>
		<th> Color: </th>
		<th> price: </th>
		<th> quantity: </th>
		<th> times_borrowed </th>
  </tr>
  	<% @borrowee.products.each do |product| %>
	    <tr>
	    	<td ><%= image_tag(product.image,style: "width: 25%",class:"img-thumbnail") %></td>
	      <td><%= product.name %></td>
	      <td><%= product.size %></td>
	      <td><%= product.color %></td>
	      <td><%= product.price %></td>
	      <td><%= product.count %> </td>
	      <td><%= product.order_items.all.pluck(:quantity).sum %> </td>
	      <td><%= link_to 'Destroy', product ,
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
        <td> <%= link_to "edit", edit_product_path(product), class: "btn btn-primary" %> </td>
      </tr>

    	</tr>
	  <% end %>
 </table>
<%= link_to "Add Product", new_product_path, class: "btn btn-primary" %>
