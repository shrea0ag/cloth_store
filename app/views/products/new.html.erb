<div class = "row" >
	<div class = "col-sm-4">
	</div>
	<div class = "col-sm-4">
		<div class="form-group row" align= "center" >
		<h1 class="h3 mb-3 font-weight-normal"> <strong> Add Products </strong> </h1> 
		<%= form_with model: @product, local: true do |f| %>
			<div class = "col-sm-2 col-form-label">
				<%= f.label  :name%>
			</div>
			<div class = "col-sm-10">
				<%= f.text_field :name, placeholder: "Name", :class=>"form-controll" %>
			</div>
			<div class = "col-sm-2 col-form-label">
				<%= f.label  :image, :class => "fiield"%>
			</div>
			<div class = "col-sm-10">
				<%= f.file_field :image, :class=>"form-controll" %>
			</div>
			<div class = "col-sm-2 col-form-label" >
				<%= f.label :size %>
			</div>
			<div class = col-sm-10 %>
				<%= f.check_box :size_xs%>
				<%= f.label(:xs, "Xtra-Small") %>
				<%= f.check_box :size_s%>
				<%= f.label(:s, "Small") %>
				<%= f.check_box :size_m %>
				<%= f.label(:m, "Medium") %>
				<%= f.check_box :size_l %>
				<%= f.label(:l, "Large") %>
				<%= f.check_box :size_xl %>
				<%= f.label(:xl, "Xtra-Large") %>
			</div>
			<div class = "col-sm-2 col-form-label">
				<%= f.label :color,:class => "col-sm-2 col-form-label" %>
			</div>
			<div class = col-sm-10> 
				<%= f.text_field :color, :class=>"form-controll"%>
			</div>
			<div class = "field" >
		    <%= f.label :gender, :class => "col-sm-2 col-form-label" %>
		    <%= f.select(:gender, options_for_select([['Male','Male'],['Female','Female']])) %>
			</div>
			<div class = "field">
				<%= f.label :quantity, :class => "col-sm-2 col-form-label"%>
				<%= f.text_field :quantity, :class => "col-sm-10"%>
			</div>
			<div class = "field">
				<%= f.label :price, :class => "col-sm-2 col-form-label"%>
				<%= f.text_field :price, :class => "col-sm-10" %>
			</div>
			<div class = "field">
				<%= f.submit  %>
			</div>
		<% end %> 
		</div>
		<div class = "col-sm-4">
		</div>
	</div>
</div>