<h1 class="h3 mb-3 font-weight-normal" align="center"> <strong> Edit your order </strong> </h1>
<div class = "row">
  <div class = "col-sm-3">
  </div>
  <div class = "col-sm-5">
    <div class = "container" style = "margin-left: 41px; margin-top: 21px;" > 
    <div class="form-horizontal" >
      <%= form_for @order_item, local: true do |f| %>
        <div class="form-group">
          <%= f.label :size, class: "control-label col-sm-2" %> 
          <div class="col-sm-10">
            <div class="form-check">
              <% @order_item.product.size.split(',').each do |size| %> 
                <%= f.radio_button(:size, size) %>
                <%= f.label(:size, size) %>
              <% end %>
            </div>
          </div>
        </div>
        <div class="form-group">
           <%= f.label :quantity, class: "control-label col-sm-2"%> 
          <div class="col-sm-10">
            <%= f.number_field :quantity %> 
          </div>
        </div>
        <div class="form-group">
          <%= f.label :color, class: "control-label col-sm-2" %> 
          <div class="col-sm-10">
            <div class="form-check">
              <% @order_item.product.color.split(',').each do |color| %>
                <%= f.radio_button(:color, color) %>
                <%= f.label(:color, color) %>
              <% end %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class = "butt">
            <%= f.submit "Update Order", :class => "btn btn-success"%>
          </div>
        </div>
      <% end %>
    </div>
    </div>
  </div>
  <div class = "col-sm-4">
  </div>
</div>

