<div class="form-group">
  <%= form_for @order_item do |f| %>
    <%= f.hidden_field :product_id , value: @product.id %> 
    <div>
      <%= f.label :size %>: <br>
      <% @product.size.split(',').each do |size| %> 
        <%= f.radio_button(:size, size) %>
        <%= f.label(:size, size) %>
      <% end %>
    </div>
    <div>
      <%= f.label :Color %>:<br>
      <% @product.color.split(',').each do |color| %>
        <%= f.radio_button(:color, color) %>
        <%= f.label(:color, color) %>
      <% end %> 
    </div>
    <div>
        <%= f.submit "Add to cart", name: "cart" %>
        <%= f.submit %>
      </div>
  <% end %>
</div>