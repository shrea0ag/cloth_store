<div class = "row">
	<div class = "col-md-6">
	<% current_borrower.borrowed_orders.each_slice(3) do |slice| %>   
  	<tr>
    <% slice.each do |order| %>
    	<% order.order_items.each do |item| %>
      <td> 
     		<div class = "thumbnail">
          <%= image_tag(item.product.image) %>
         	<div class = caption >
            <p> <%= item.product.name %> | quantity:<%= item.quantity %> | <%= item.total %> | <%= order.expected_return_date %>  </p>
          </div>
         </div>
      </td>
			<% end %>
      <p> <%= link_to "Return", edit_order_path(order), class: "btn btn-primary" %> | <%= order.total_of_a_order%> </p>
		<% end %>
		</tr>
	<% end %>
	</div>
</div>

