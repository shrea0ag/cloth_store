<% if current_borrower.borrowed_orders.present? %>
  <h1 style= "margin-left: 390px; color: teal"> <strong> Borrowed Orders </strong> </h1>
  <% current_borrower.borrowed_orders.each do |order| %>
    <% order.order_items.each do |item| %>
      <div class = "container" style="margin-top: 2%">
        <div class = "row">
          <div class = "col-md-1">
          </div>
          <div class = "col-md-4">
            <div class="card shadow" style="width: 30rem;">
              <%= image_tag(item.product.image, class: "card-img-top") %>
            </div>
          </div>
          <div class = "col-md-3">
            <div class = "jumbotron" style="margin-top: 8%">
              <p class="font-weight-bold"> Name: <%= item.product.name %> <br> Borrowed Date: <%= order.updated_at.to_date %>  <br> Return Date: <%= order.expected_return_date %> <br> Amount: Rs. <%= item.total %> <br> Quantity: <%= item.quantity %> <br> Send To: <%= order.name %> <br> Address: <%= order.address + ' ' + order.city %> </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
      <p style="margin-left: 22%; margin-top: 2%"> <%= link_to "Return", order_path(order), class: "btn btn-success" %> | <span style = "color: red; font-size: 137%;" > Rs. <%= order.total_of_a_order%> </span> </p>
  <% end %>
<% else %>
  <p class = "alert alert-danger"> Nothing to return </p>
<% end %>
