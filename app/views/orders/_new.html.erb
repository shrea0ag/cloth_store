<h1>Checkout</h1>
<%= form_for @order do |f| %>
  <%= f.hidden_field :order_item_id , value: @order_item.id %> <br>

  <%= f.label :name  %> 
  <%= @order_item.borrower.email %>
  <br>
  <%= f.label :address   %>
  <%= f.text_field :address%>
  <br>
  <%= f.label :phone_number %>
  <%= f.text_field :phone %>
  <br>
  <%= f.submit "Checkout" %>
<% end %>
 